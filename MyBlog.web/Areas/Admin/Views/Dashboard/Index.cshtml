@model MyBlog.Web.Areas.Admin.Models.DashboardViewModel;
@{
    ViewData["Title"] = "داشبورد";
    ViewData["selected"] = "dashboard"; // برای هایلایت کردن منوی داشبورد در پنل ادمین
}
<section class="content-header">
    <h1>@ViewData["Title"]</h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <!-- تعداد دسته‌بندی‌ها -->
        <div class="col-lg-4 col-xs-12">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@Model.CategoryCount</h3>
                    <p>دسته‌بندی‌ها</p>
                </div>
                <div class="icon">
                    <i class="ion ion-folder"></i>
                </div>
                <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="small-box-footer">
                    اطلاعات بیشتر <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        <!-- تعداد مقالات -->
        <div class="col-lg-4 col-xs-12">
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@Model.PostCount</h3>
                    <p>مقالات</p>
                </div>
                <div class="icon">
                    <i class="ion ion-document-text"></i>
                </div>
                <a asp-area="Admin" asp-controller="Post" asp-action="Index" class="small-box-footer">
                    اطلاعات بیشتر <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        <!-- تعداد کاربران -->
        <div class="col-lg-4 col-xs-12">
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@Model.UserCount</h3>
                    <p>کاربران</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="small-box-footer">
                    اطلاعات بیشتر <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
    </div>
    <!-- می‌توانید در اینجا المان‌های دیگری مثل نمودارها، آمارهای دوره‌ای یا اعلان‌ها اضافه کنید -->
</section>
