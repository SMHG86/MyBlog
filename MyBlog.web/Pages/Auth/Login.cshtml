@page
@model MyBlog.Web.Pages.Auth.LoginModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ورود به سایت";
}
<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div class="form-group">
        <input asp-for="UserName" class="form-control" placeholder="نام کاربری" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="ورود" class="btn btn-primary" />
        <a asp-page="Register" class="btn btn-link">ثبت نام</a>
    </div>
</form>
